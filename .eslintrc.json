{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "emit": "readonly",
    "React": "readonly",
    "document": "writable",
    "window": "writable"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["components/*.js", "pages/*.js"],
      "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": "off"
      }
    }
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
