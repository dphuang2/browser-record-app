{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended",
    "plugin:shopify/react",
    "plugin:shopify/polaris",
    "plugin:shopify/webpack"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "emit": "readonly",
    "API_KEY": "readonly",
    "React": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["components/*.js", "pages/*.js"],
      "rules": {
        "react/react-in-jsx-scope": "off"
      }
    }
  ],
  "rules": {
  }
}
